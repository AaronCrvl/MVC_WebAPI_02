
@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApplication1.Views.PaginaInicialModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/IndexStyle.css" type="text/css" />
    <title>Página Inicial</title>
</head>
<body>
    <div id="Caixa">
        <div id="CaixaBotoes">
            <h1>Acesso à Central</h1>
            <form class="CaixasDeTexto" method="post">
                <p>
                    <input name="Nome" type="text" />
                </p>

                <p>
                    <input name="Senha" type="text" />
                </p>

                <p><input type="submit" value="Submit" asp-page-handler="OnPostSubmit" /></p>
                @Model.Retorno
            </form>
        </div>
    </div>
</body>
</html>